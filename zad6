def NWD(a,b):
	while b !=  a:
		if b > a:
			b -= a
		else: 
			a -= b
	return a
def NWW(a,b):
	return int((a*b)/NWD(a,b))

a ,b = int(input("podaj a: ")), int(input("podaj b: "))
c, d = int(input("podaj c: ")), int(input("podaj d: "))
tmp = NWW(b,d)
print(tmp)
a = (tmp/b)*a
b = tmp
c = (tmp/d)*c
d = tmp
print(a, " / ", b)
print(c, " / ", d)
